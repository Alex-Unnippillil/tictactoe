{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"]
  }
}
