{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "skipLibCheck": true
  },
  "include": ["playwright.config.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
